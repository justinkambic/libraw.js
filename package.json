{
  "name": "libraw",
  "author": "Justin Kambic",
  "version": "2.0.0",
  "description": "Provide a subset of LibRaw functionality.",
  "main": "./dist/libraw.js",
  "types": "./dist/libraw.d.ts",
  "license": "LGPL-2.1",
  "gypfile": true,
  "dependencies": {
    "@types/node": "^14.14.7",
    "node-addon-api": "^3.0.0",
    "node-pre-gyp": "^0.16.0",
    "node-pre-gyp-github": "^1.4.3",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "babel-jest": "^26.6.3",
    "eslint": "^7.14.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "prettier": "^2.2.0",
    "typedoc": "^0.20.25",
    "typedoc-plugin-markdown": "^3.5.0"
  },
  "scripts": {
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "generate-docs": "typedoc --plugin typedoc-plugin-markdown --hideBreadcrumbs true --tsconfig ./tsconfig.json ./src/libraw.ts && rm ./docs/README.md",
    "lint": "eslint . --ext .ts",
    "install": "node-pre-gyp install --fallback-to-build && tsc",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "binary": {
    "module_name": "node_libraw_binding",
    "module_path": "./build/Release",
    "host": "https://github.com/justinkambic/libraw.js/releases/download/",
    "remote_path": "{version}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format-check",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/justinkambic/libraw.js.git"
  }
}
