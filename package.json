{
  "name": "libraw.js",
  "author": "Justin Kambic",
  "version": "2.2.0",
  "description": "Provide a subset of LibRaw functionality.",
  "main": "./dist/libraw.js",
  "types": "./dist/libraw.d.ts",
  "license": "LGPL-2.1",
  "gypfile": true,
  "dependencies": {
    "node-addon-api": "^3.0.0",
    "node-gyp-build": "^4.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "babel-jest": "^27.3.1",
    "eslint": "^7.14.0",
    "fp-ts": "^2.9.5",
    "husky": "^4.3.6",
    "io-ts": "^2.2.16",
    "jest": "^27.3.1",
    "prettier": "^2.2.0",
    "typedoc": "^0.22.9",
    "typedoc-plugin-markdown": "^3.11.7",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=10.24.1 <=16.0.0"
  },
  "scripts": {
    "build": "node-gyp rebuild && tsc",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "generate-docs": "typedoc --plugin typedoc-plugin-markdown --hideBreadcrumbs true --tsconfig ./tsconfig.json ./src/libraw.ts",
    "lint": "eslint . --ext .ts",
    "install": "node-gyp-build",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "bugs": {
    "url": "https://github.com/justinkambic/libraw.js/issues"
  },
  "homepage": "https://github.com/justinkambic/libraw.js",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format-check",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/justinkambic/libraw.js.git"
  }
}
